# Database Configuration
DATABASE_URL=postgresql://deeplearn_user@localhost:5432/deeplearn
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=deeplearn
DATABASE_USER=deeplearn_user
DATABASE_PASSWORD=

# Redis Configuration (Required for ARQ task queue)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenAI Configuration (Required for GPT models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Claude Configuration (Required for Claude models)
# Choose provider: 'anthropic' (direct API) or 'bedrock' (AWS)
CLAUDE_PROVIDER=anthropic

# Anthropic API Configuration (if using CLAUDE_PROVIDER=anthropic)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-haiku-4-5

# AWS Bedrock Configuration (if using CLAUDE_PROVIDER=bedrock)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-west-2

# Optional Configuration
USER_LEVEL=beginner
LESSON_DURATION=15
MASTERY_THRESHOLD=0.9
TEMPERATURE=0.7
MAX_TOKENS=1500
CACHE_ENABLED=true
DEBUG=false

# Task Queue Registrations (comma-separated module paths loaded by the worker on startup)
# Example registers content_creator handlers
TASK_QUEUE_REGISTRATIONS=modules.content_creator.public

# Azure OpenAI Configuration (Alternative to OpenAI)
# AZURE_OPENAI_API_KEY=your_azure_key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2023-05-15
