# Proactive Learning App Environment Variables
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5
OPENAI_BASE_URL=https://api.openai.com/v1

# Azure OpenAI Configuration (if using Azure)
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-05-15

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/deeplearn
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=deeplearn
DATABASE_USER=username
DATABASE_PASSWORD=password
DATABASE_ECHO=false

# Learning App Configuration
USER_LEVEL=beginner
LESSON_DURATION=15
MASTERY_THRESHOLD=0.9
PASSING_THRESHOLD=0.7

# Data Storage Configuration
DATA_DIRECTORY=.learning_data
CACHE_ENABLED=true

# API Configuration
MAX_RETRIES=3
REQUEST_TIMEOUT=30
TEMPERATURE=0.7
MAX_TOKENS=1500

# Quiz Configuration
MAX_QUIZ_QUESTIONS=10
MIN_QUIZ_QUESTIONS=3
DEFAULT_QUESTION_COUNT=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=learning_app.log

# Development Configuration
DEBUG=false
RICH_CONSOLE=true