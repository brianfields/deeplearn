{
  "expo": {
    "name": "DeepLearn Mobile",
    "slug": "deeplearn-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash.jpg",
      "resizeMode": "cover",
      "backgroundColor": "#1a1a1a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.brian.deeplearn",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["audio", "airplay", "picture-in-picture"],
        "NSCameraUsageDescription": "The learning coach needs camera access to capture study materials.",
        "NSPhotoLibraryUsageDescription": "Allow access to choose study photos to share with your coach.",
        "NSPhotoLibraryAddUsageDescription": "Allow saving analyzed study photos back to your library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.brian.deeplearn",
      "permissions": [
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "73fcfef2-62b0-4298-8be7-a511147d9bc1"
      }
    }
  }
}
